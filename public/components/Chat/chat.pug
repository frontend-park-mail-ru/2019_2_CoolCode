block page
    div.bem-chat-column
        div.bem-chat-column-header
            div.bem-chat-column-header__info-row.bem-chat-column-header__info-row_style
                div.bem-chat-column-header__info-row__image-row
                    div.bem-chat-column-header__info-row__image-row__loader.bem-chat-column-header__info-row__image-row__loader_style
                    img.bem-chat-column-header__info-row__image-row__image.bem-chat-column-header__info-row__image-row__image_style(src='/' + chatUserPhoto)
                div.bem-chat-column-header__info-row__info-column
                    div.bem-chat-column-header__info-row__info-column__name-row.bem-chat-column-header__info-row__info-column__name-row_style #{chatUser.username}
                    div.bem-chat-column-header__info-row__info-column__status-row.bem-chat-column-header__info-row__info-column__status-row_style last seen..
            if Object.keys(importantMessage).length !== 0
                div.bem-chat-column-header__pinned-message.bem-chat-column-header__pinned-message_style
                    div.bem-chat-column-header__pinned-message__content.bem-chat-column-header__pinned-message__content_style=importantMessage.text
                    img.bem-chat-column-header__pinned-message__icon.bem-chat-column-header__pinned-message__icon_style(src="../images/pinned.png")
        div.bem-chat-column-main
            div.bem-chat-column-msgwindow
            form.bem-chat-column-input
                div.bem-chat-column-input__icon-container
                    img.bem-chat-column-input__icon-container__icon.bem-chat-column-input__icon-container__icon_style(src="../images/add.png")
                textarea.bem-chat-column-input__text.bem-chat-column-input__text_style(placeholder="chat here..")
                div.bem-chat-column-input__icon-container
                    img.bem-chat-column-input__icon-container__icon.bem-chat-column-input__icon-container__icon_style(src="../images/send.png")
