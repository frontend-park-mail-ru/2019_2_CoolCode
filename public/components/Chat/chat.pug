block page
    div.chat-column
        div.chat-column-header
            div.chat-column-header__info-row.chat-column-header__info-row_style
                div.chat-column-header__info-row__image-row
                    div.chat-column-header__info-row__image-row__loader.chat-column-header__info-row__image-row__loader_style
                    img.chat-column-header__info-row__image-row__image.chat-column-header__info-row__image-row__image_style(src='/' + chatUserPhoto)
                div.chat-column-header__info-row__info-column
                    div.chat-column-header__info-row__info-column__name-row.chat-column-header__info-row__info-column__name-row_style #{chatUser.username}
                    div.chat-column-header__info-row__info-column__status-row.chat-column-header__info-row__info-column__status-row_style last seen..
            if Object.keys(importantMessage).length !== 0
                div.chat-column-header__pinned-message.chat-column-header__pinned-message_style
                    div.chat-column-header__pinned-message__content.chat-column-header__pinned-message__content_style=importantMessage.text
                    img.chat-column-header__pinned-message__icon.chat-column-header__pinned-message__icon_style(src="../images/pinned.png")
        div.chat-column-main
            div.chat-column-msgwindow
            form.chat-column-input
                div.chat-column-input__icon-container
                    img.chat-column-input__icon-container__icon.chat-column-input__icon-container__icon_style(src="../images/add.png")
                textarea.chat-column-input__text.chat-column-input__text_style(placeholder="chat here..")
                div.chat-column-input__icon-container
                    img.chat-column-input__icon-container__icon.chat-column-input__icon-container__icon_style(src="../images/send.png")
