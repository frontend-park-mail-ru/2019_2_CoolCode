mixin item(title, href, section)
    a#change(href=href data-section=section)= title

div.head

    a(href="/")
        img.logo(src="images/logo_2.png")
    if login
        +item('log out', '/logout', 'logout')
    else
        +item('log in', `/login`, "login")
        +item('sign up', `/signup`, "signUp")
        +item('profile', `/profile`, "profile")

block content