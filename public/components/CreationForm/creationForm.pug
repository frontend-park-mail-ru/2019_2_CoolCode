block content
    div.bem-overlay.bem-overlay_style
    div.bem-wrkspace-form.bem-wrkspace-form_style
        form.bem-wrkspace-form__form
            if viewType == "channelForm"
                div.bem-wrkspace-form__form__name.bem-wrkspace-form__form__name_style create channel
                input.bem-wrkspace-form__form__input-field.bem-wrkspace-form__form__input-field_style(type='text' placeholder='channel name' name='channelName')
            if viewType == "wrkspaceForm"
                div.bem-wrkspace-form__form__name.bem-wrkspace-form__form__name_style create workspace
                input.bem-wrkspace-form__form__input-field.bem-wrkspace-form__form__input-field_style(type='text' placeholder='workspace name' name='wsName')
            div.bem-wrkspace-form__form__error-field.bem-wrkspace-form__form__error-field_style
            button.bem-wrkspace-form__form__submit-button.bem-wrkspace-form__form__submit-button_style(type='submit') Create!
