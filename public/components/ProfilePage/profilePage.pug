mixin field(pText, fieldText, id)
    div.profile-info__field(id=id)
        div.profile-info__field__name.profile-info__field__name_style.responsive_text_1= pText+':'
        div.profile-info__field__info.profile-info__field__info_style.responsive_text_2= fieldText
        input.profile-info__field__input.profile-info__field__input_style.profile-info__field__input_hidden


block page
    div.profile-header.profile-header_size
        div.profile-header__image-row
            div.profile-header__image-row__content
                div.profile-header__content__loader.profile-header__content__loader_style.profile-header__content__image_size
                img.profile-header__content__image.profile-header__content__image_style.profile-header__content__image_size(src='/images/user.jpg')
                input.profile-header__content__input(type='file' accept='image/*')
            div.profile-header__image-row__error.div.profile-header__image-row__error_style
        div.profile-header__username-column
            div.profile-header__username-column__username#username-setting
                div.profile-header__username-column__username__text.profile-header__username-column__username__text_style.responsive_text_3= username
                input.profile-header__username-column__username__input.profile-header__username-column__username__input_style.profile-header__username-column__username__input_hidden
            div.profile-header__username-column__fullname#fullname-setting
                div.profile-header__username-column__fullname__text.profile-header__username-column__fullname__text_style.responsive_text_2= fullname
                input.profile-header__username-column__fullname__input.profile-header__username-column__fullname__input_style.profile-header__username-column__fullname__input_hidden
            div.profile-header__username-column__error.profile-header__username-column__error_style
    div.profile-info.profile-info_size
        +field('status', fstatus, 'fstatus-setting')
        +field('email', email, 'email-setting')
        +field('phone', phone, 'phone-setting')
        div.profile-info__error.profile-info__error_style
        //div.profile-info__settings
            div.profile-info__settings__name.profile-info__settings__name_style privacy settings
            a.profile-info__settings__ref(href='/')
                img.profile-info__settings__ref__image.profile-info__settings__ref__image_style(src='images/settings.jpg')


